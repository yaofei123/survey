<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>Encoding</filter-name>
        <filter-class>com.questionnaire.survey.filter.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.questionnaire.survey.filter.SecurityFilter</filter-class>
    </filter>
    <!--  <filter-mapping>
     <filter-name>Encoding</filter-name>
     <servlet-name>action</servlet-name>
    </filter-mapping>
     -->

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SurveyManage</servlet-name>
        <servlet-class>com.questionnaire.survey.servlet.SurveyManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfigManage</servlet-name>
        <servlet-class>com.questionnaire.survey.servlet.ConfigManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionManage</servlet-name>
        <servlet-class>com.questionnaire.survey.servlet.QuestionManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowSurvey</servlet-name>
        <servlet-class>com.questionnaire.survey.servlet.ShowSurvey</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisManage</servlet-name>
        <servlet-class>com.questionnaire.survey.servlet.StatisManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminManage</servlet-name>
        <servlet-class>com.questionnaire.survey.servlet.AdminManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LinkManage</servlet-name>
        <servlet-class>com.questionnaire.survey.servlet.LinkManage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyManage</servlet-name>
        <url-pattern>/servlet/SurveyManage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigManage</servlet-name>
        <url-pattern>/servlet/ConfigManage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionManage</servlet-name>
        <url-pattern>/servlet/QuestionManage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowSurvey</servlet-name>
        <url-pattern>/survey/ShowSurvey.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisManage</servlet-name>
        <url-pattern>/servlet/StatisManage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminManage</servlet-name>
        <url-pattern>/servlet/AdminManage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LinkManage</servlet-name>
        <url-pattern>/servlet/LinkManage.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
</web-app>
